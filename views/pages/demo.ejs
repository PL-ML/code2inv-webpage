<!DOCTYPE html>
<html>

<head>
	<title>Code2Inv | Demo</title>
	<%- include('../partial/includes.ejs') %>
	<script src="js/demo.js"></script>
    <link rel="stylesheet" type="text/css" media="screen" href="css/demo.css" />
    <script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"></script>
</head>

<body>
	<%- include('../partial/navbar.ejs') %>

	<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>A Demo of Code2Inv</h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-xs-12 btn-group-vertical" id="file_list">
                <h3>Select a file</h3>
                <% for(var i = 0; i < file_list.length; i++) { %>
                    <a class="btn file-list-btn" id="file-<%=file_list[i]%>">
                        <%=file_list[i]%>
                    </a><br>
                <% } %>
            </div>
            <div class="col-md-5 col-xs-12">
                <div class="card">
                    <div class="card-title" id="file_name">
                        <h3>Your selected file will show up here</h3>
                    </div>
                    <div class="card-body">
                        <div id="tab-div">
                            <ul class="nav nav-tabs src-tabs" id="src-tabs">
                                <li class="active" onclick="fill_src(this)">
                                    <a href="#file_name" class="tab-link" id="src_source">Code</a>
                                </li>
                                <li onclick="fill_src(this)">
                                    <a href="#file_name" class="tab-link" id="src_graph">Graph</a>
                                </li>
                                <li onclick="fill_src(this)">
                                    <a href="#file_name" class="tab-link" id="src_vc">VC</a>
                                </li>
                                <li onclick="fill_src(this)">
                                    <a href="#file_name" class="tab-link" id="src_grammar">Grammar</a>
                                </li>
                            </ul>
                        </div>
                        <pre><code class="prettyprint" id="file_source">/* Select a file to show its code */</code></pre>
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-xs-12">
                <div class="card">
                    <div class="card-title" id="result-card-title">
                        <h3>Result</h3>
                    </div>
                    <div class="card-body">
                        <div id="tab-div">
                            <ul class="nav nav-tabs" id="res-tabs">
                                <li class="active" onclick="fill_res(this)">
                                    <a href="#result-card-title" class="tab-link" id="res_inv">Invariant</a>
                                </li>
                                <li onclick="fill_res(this)">
                                    <a href="#result-card-title" class="tab-link" id="res_stats">Stats</a>
                                </li>
                            </ul>
                        </div>
                        <pre id="result-container"><code class="prettyprint" id="result">/* The result will be displayed here */</code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>